@{
    ViewData["Title"] = "Add Categories";
}

<div class="container">
    <h2>Manage Fault Categories</h2>
    <form id="categoryForm">
        <div class="form-group">
            <label for="categoryName">Fault Category Name:</label>
            <input type="text" class="form-control" id="categoryName" placeholder="Enter fault category name" required>
        </div>
        <div class="form-group">
            <label for="categoryDescription">Fault Description:</label>
            <textarea class="form-control" id="categoryDescription" rows="3" placeholder="Enter fault description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>